@model ShoppingGuide.Models.Product

@{
    ViewBag.Title = "Product Details";
}

<p>
    <ul class="nav nav-tabs">
      <li><a href="~/Admin/Users">User Management</a></li>
      <li class="active"><a href="~/ProductManage">Product Management</a></li>
      <li>@Html.ActionLink("Account Management", "Manage", "Account", routeValues: null, htmlAttributes: new { title = "Manage" })</li>
    </ul>
</p>

@*Use forms even though there aren't any forms.  Use the same styling as other pages.
For consistency.*@
<fieldset class="form-horizontal">
    <legend>Product details.</legend>

    <div class="form-group">
        @Html.LabelFor(model => model.Name, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <h5>@Html.DisplayFor(model => model.Name)</h5>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Price, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <h5>@Html.DisplayFor(model => model.Price)</h5>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Description, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <h5>@Html.DisplayFor(model => model.Description)</h5>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CategoryName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <h5>@Html.DisplayFor(model => model.CategoryName)</h5>
        </div>
    </div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.ProductId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
