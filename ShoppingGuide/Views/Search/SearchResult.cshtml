@model IEnumerable<ShoppingGuide.Models.Product>

@{
    ViewBag.Title = "SearchResult";
}


<h2></h2>
<fieldset class="form-horizontal">
    @Html.Partial("_ProductNavPartial")

    <legend>Search Result</legend>
    <div class="list-group col-md-7">
        @foreach (var product in Model)
        {
            <a href="~/Store/Details/@product.ProductId" class="list-group-item">
                <h4 class="list-group-item-heading">@product.Name</h4>
                <p class="list-group-item-text"><b>Price:</b> $@product.Price</p>
                <p class="list-group-item-text">
                    <b>Description:</b>
                    @if (product.Description.Length < 50)
                    {
                        Html.Raw(product.Description);
                    }
                    else
                    {
                        Html.Raw(product.Description.Substring(0, 50));
                    }
                </p>
            </a>
        }
    </div>
</fieldset>
